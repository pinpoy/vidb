<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:background="@drawable/login_bg">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/login_getverification_code_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:hint="获取验证码" />

        <EditText
            android:id="@+id/login_phone_et"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/login_getverification_code_btn"
            android:textSize="18sp"
            android:hint="在此输入手机号"
            android:numeric="integer"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/login_pwd_et"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/login_phone_et"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:hint="验证码"
            android:numeric="integer"
            android:singleLine="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_pwd_et"
            android:orientation="horizontal"
            android:layout_margin="15dp">
            <Button
                android:id="@+id/cancel"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:text="取消"
                android:layout_gravity="left|center_vertical"
                android:textSize="20sp" />

            <Button
                android:id="@+id/login_submit_btn"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_marginLeft="25dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|center_vertical"
                android:text="注册/登陆"
                android:textSize="20sp" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>