<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/personal_center"
        android:drawablePadding="10dp"
        android:text="个人中心"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户ID：88888"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/vip_leve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="VIP等级：0"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#fff600" />

    <TextView
        android:id="@+id/tv_my_red"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:drawableLeft="@drawable/personal_my_red"
        android:drawablePadding="25dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="我的红包"
        android:textColor="#FFFFFF"
        android:textSize="22dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#fff600" />

    <TextView
        android:id="@+id/tv_task"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:drawableLeft="@drawable/personal_task"
        android:drawablePadding="25dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="任务栏"
        android:textColor="#FFFFFF"
        android:textSize="22dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#fff600" />

    <TextView
        android:id="@+id/tv_seetting"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:drawableLeft="@drawable/personal_setting"
        android:drawablePadding="25dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="设置"
        android:textColor="#FFFFFF"
        android:textSize="22dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#fff600" />

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:drawableLeft="@drawable/personal_share"
        android:drawablePadding="25dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="分享"
        android:textColor="#FFFFFF"
        android:textSize="22dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#fff600" />

    <TextView
        android:id="@+id/tv_help"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:drawableLeft="@drawable/personal_help"
        android:drawablePadding="25dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="帮助"
        android:textColor="#FFFFFF"
        android:textSize="22dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#fff600" />

</LinearLayout>